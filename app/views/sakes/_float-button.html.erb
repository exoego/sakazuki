<div class="row fixed-bottom mr-2 mb-4 click-transparent">
  <div class="col text-right">
    <% if params["action"] == "show" %>
      <%= link_to(tag.i(class: "bi-pencil-square", style: "font-size: 2em"),
                  edit_sake_path(@sake),
                  { class: "btn btn-info mx-1 click-nontransparent",
                    "data-testid": "edit-#{@sake.id}", }) %>
    <% end %>

    <%= link_to(tag.i(class: "bi-plus-square", style: "font-size: 2em"),
                new_sake_path,
                { class: "btn btn-primary ml-1 click-nontransparent",
                  "data-testid": "new-sake", }) %>
  </div>
</div>
