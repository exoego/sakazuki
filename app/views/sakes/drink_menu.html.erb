<% select_pack_js(%w[common sakes/drink_menu]) %>
<% select_pack_style(%w[common sakes/drink_menu]) %>

<h1 class="drink-menu-font display-5">
  <%= title(t(".title")) %>
</h1>

<div class="row drink-menu-font">
  <% @sakes.each_slice(2) do |sake1, sake2| %>
    <div class="row gx-lg-5">
      <%= render("one_drink", sake: sake1) %>
      <%= render("one_drink", sake: sake2) if sake2.present? %>
    </div>
  <% end %>
</div>

<p class="drink-menu-font text-end fs-4 mt-5">
  <%= t(".price_per_go") %>
</p>
